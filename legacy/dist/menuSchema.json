{
    "$id": "https://lerwine.github.io/menuSchema.json",
    "type": "object",
    "definitions": {
        "navItem": {
            "$id": "#/definitions/navItem",
            "type": "object",
            "required": [ "title", "pageUrl" ],
            "properties": {
              "title": {
                "$id": "#/definitions/navItem/properties/title",
                "type": "string",
                "title": "Link Title",
                "default": ""
              },
              "heading": {
                "$id": "#/definitions/navItem/properties/heading",
                "type": "string",
                "title": "Page Heading",
                "default": ""
              },
              "pageUrl": {
                "$id": "#/definitions/navItem/properties/pageUrl",
                "type": "string",
                "title": "Relative page URL",
                "default": ""
                }
            }
        },
        "navList": {
            "$id": "#/definitions/navList",
            "type": "array",
            "minItems": 1,
            "items": [
                   {
                       "anyOf": [
                            { "$ref": "#/definitions/leaf" },
                            { "$ref": "#/definitions/container" }
                       ]
                   }
            ]
        },
        "leaf": {
            "$id": "#/definitions/leaf",
            "$ref": "#/definitions/navItem",
            "properties": {
                "disabled": {
                    "$id": "#/definitions/leaf/properties/disabled",
                    "type": "boolean",
                    "title": "Menu item disabled",
                    "default": false
                }
            }
        },
        "container": {
            "$id": "#/definitions/container",
            "$ref": "#/definitions/navItem",
            "required": [ "items" ],
            "properties": {
                "items": {
                    "$id": "#/definitions/container/items",
                    "$ref": "#/definitions/navList"
                }
            }
        }
    },
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": [ "rootItems" ],
    "properties": {
      "rootItems": {
        "$id": "#/properties/navigation",
        "$ref": "#/definitions/navList"
      }
    }
  }