{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build TypeScript",
            "identifier": "build-ts",
            "type": "gulp",
            "task": "build-ts",
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": [ "$tsc" ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Deploy Lib",
            "identifier": "deploy-lib",
            "type": "gulp",
            "task": "deploy-lib",
            "group": "build",
            "problemMatcher": [ ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Lint",
            "identifier": "lint",
            "type": "gulp",
            "task": "lint",
            "group": "test",
            "problemMatcher": [ "$tslint5" ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Start web server",
            "type": "gulp",
            "task": "startWebServer",
            "problemMatcher": []
        },
        {
            "label": "Stop web server",
            "type": "gulp",
            "task": "stopWebServer",
            "problemMatcher": []
        }
    ]
}