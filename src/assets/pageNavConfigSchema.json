{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/lerwine/MyGitHubPages/src/assets/blob/pageNavConfigSchema.json",
  "type": "object",
  "definitions": {
    "menuItem": {
      "$id": "#/definitions/menuItem",
      "type": "object",
      "required": ["label"],
      "properties": {
        "id": {
          "$id": "#/definitions/menuItem/properties/id",
          "type": "string",
          "title": "Programmatic Identifier"
        },
        "label": {
          "$id": "#/definitions/menuItem/properties/label",
          "type": "string",
          "title": "Menu item display text"
        },
        "heading": {
          "$id": "#/definitions/menuItem/properties/heading",
          "type": "string",
          "title": "Page Heading"
        },
        "description": {
          "$id": "#/definitions/menuItem/properties/description",
          "type": "string",
          "title": "Page Description"
        }
      }
    },
    "menuItemList": {
      "$id": "#/definitions/menuItemList",
      "type": "array",
      "minItems": 1,
      "items": [{
        "anyOf": [{
            "$ref": "#/definitions/leafPage"
          },
          {
            "$ref": "#/definitions/leafLink"
          },
          {
            "$ref": "#/definitions/containerWithPage"
          },
          {
            "$ref": "#/definitions/containerWithLink"
          }
        ]
      }]
    },
    "leafPage": {
      "$id": "#/definitions/leafPage",
      "$ref": "#/definitions/menuItem",
      "required": ["pageUrl"],
      "properties": {
        "subHeading": {
          "$id": "#/definitions/leafPage/properties/subHeading",
          "type": "string",
          "title": "Text for sub-heading"
        },
        "pageUrl": {
          "$id": "#/definitions/leafPage/properties/pageUrl",
          "type": "string",
          "title": "Relative page URL"
        }
      }
    },
    "leafLink": {
      "$id": "#/definitions/leafLink",
      "$ref": "#/definitions/menuItem",
      "required": ["linkUrl"],
      "properties": {
        "linkUrl": {
          "$id": "#/definitions/leafLink/properties/linkUrl",
          "type": "string",
          "title": "External link"
        }
      }
    },
    "container": {
      "$id": "#/definitions/container",
      "$ref": "#/definitions/menuItem",
      "required": ["menuItems"],
      "properties": {
        "menuItems": {
          "$id": "#/definitions/container/menuItems",
          "$ref": "#/definitions/menuItemList"
        }
      }
    },
    "containerWithPage": {
      "$id": "#/definitions/containerWithPage",
      "$ref": "#/definitions/container",
      "required": ["pageUrl"],
      "properties": {
        "pageUrl": {
          "$id": "#/definitions/containerWithPage/properties/pageUrl",
          "type": "string",
          "title": "Relative page URL"
        }
      }
    },
    "containerWithLink": {
      "$id": "#/definitions/containerWithLink",
      "$ref": "#/definitions/container",
      "required": ["linkUrl"],
      "properties": {
        "subHeading": {
          "$id": "#/definitions/leafPage/properties/subHeading",
          "type": "string",
          "title": "Text for sub-heading"
        },
        "linkUrl": {
          "$id": "#/definitions/containerWithLink/properties/linkUrl",
          "type": "string",
          "title": "External link"
        }
      }
    }
  },
  "required": ["menuItems"],
  "properties": {
    "menuItems": {
      "$id": "#/properties/menuItems",
      "$ref": "#/definitions/menuItemList"
    }
  }
}
